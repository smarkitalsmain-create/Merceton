# Database
# Get connection strings from Neon (https://neon.tech)
# DATABASE_URL should be the pooled connection (contains -pooler)
# DIRECT_URL should be the direct connection (NO -pooler, NO pgbouncer)
DATABASE_URL=
DIRECT_URL=

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk Redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding/create-store

# Razorpay (Test Mode)
# Get these from https://dashboard.razorpay.com (Test Mode)
NEXT_PUBLIC_RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Backoffice (optional)
# Comma-separated list of Clerk user IDs who should have admin access
ADMIN_USER_IDS=

# Cloudinary (for image uploads)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Custom Domain Configuration
# Comma-separated list of platform domains (where dashboard/auth routes work)
PLATFORM_DOMAINS=localhost,127.0.0.1
# Base URL of the platform (for redirects and links)
PLATFORM_BASE_URL=http://localhost:3000

# Platform Domain Configuration (for custom domain support)
# Comma-separated list of platform domains (not custom merchant domains)
PLATFORM_DOMAINS=localhost,127.0.0.1
# Base URL of the platform (for DNS CNAME instructions)
PLATFORM_BASE_URL=http://localhost:3000
